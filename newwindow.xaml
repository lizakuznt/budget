<Window x:Class="budget.newwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budget"
        mc:Ignorable="d"
        Title="newwindow" Height="150" Width="500">
    <Grid Background="#D0E9D8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="460*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="Добавить новый тип" Grid.Row="2" Background="#C1E1C1 " Click="Button_Click" Margin="65,8,65,8"/>
        <TextBox x:Name="typebox" Grid.Column="1" TextWrapping="Wrap" Width="460" Height="37" Grid.Row="1" Grid.ColumnSpan="2" Margin="1,4,20,3"/>
        <TextBlock Grid.Column="1" TextWrapping="Wrap" Text="Добавьте новый тип записи" FontSize="16" Margin="127,12,127,12"/>
    </Grid>
</Window>